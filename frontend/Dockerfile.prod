FROM node:18-alpine as build

WORKDIR /app

# 依存関係をインストール
COPY package*.json ./
RUN npm install

# ソースコードをコピー
COPY . .

# 本番ビルド（WebSocketなし）
RUN npm run build

# Nginxで静的ファイルを配信
FROM nginx:alpine

# curlをインストール（ヘルスチェック用）
RUN apk add --no-cache curl

# ビルドした静的ファイルをコピー
COPY --from=build /app/build /usr/share/nginx/html

# Nginx設定をコピー
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
